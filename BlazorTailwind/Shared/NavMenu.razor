<nav class="text-slate-100 bg-slate-600 sticky top-0 md:h-screen">
    <div class="p-4 text-center cursor-pointer md:cursor-auto bg-slate-700 md:h-14" @onclick="_ => _collapsed = !_collapsed">
        <h3 class="text-xl">BlazorTailwind</h3>
    </div>
    <div class="p-2 @(_collapsed ? "hidden" : "") md:block">
        @foreach (var (name, url) in _links)
        {
            <NavLink ActiveClass="active-nav" href="@url" Match="NavLinkMatch.All" @onclick="_ => _collapsed = true">
                <span class="block p-2 my-2 cursor-pointer hover:bg-slate-500 transition ease-in-out rounded">@name</span>
            </NavLink>
        }
    </div>
</nav>

@code {

    private bool _collapsed = true;

    private readonly (string Name, string Url)[] _links = new[]
    {
        ("Home", ""),
        ("Page One", "one"),
        ("Page Two", "two"),
    };

}